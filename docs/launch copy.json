{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Node.js Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/app.js",
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Node.js Server (with nodemon)",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/app.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Client (Chrome)",
            "url": "http://localhost:3001",
            "webRoot": "${workspaceFolder}/public",
            "sourceMapPathOverrides": {
                "webpack:///*": "${webRoot}/*"
            },
            "preLaunchTask": "Start Dev Servers"
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "Debug Client (Edge)",
            "url": "http://localhost:3001",
            "webRoot": "${workspaceFolder}/public",
            "sourceMapPathOverrides": {
                "webpack:///*": "${webRoot}/*"
            },
            "preLaunchTask": "Start Dev Servers"
        },
        {
            "name": "debug app",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080",
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "app.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/app.js"
        }
    ],
    "compounds": [
        {
            "name": "Debug Full Stack",
            "configurations": [
                "Debug Node.js Server (with nodemon)",
                "Debug Client (Chrome)"
            ],
            "presentation": {
                "hidden": false,
                "group": "Full Stack",
                "order": 1
            },
            "stopAll": true
        }
    ]
}