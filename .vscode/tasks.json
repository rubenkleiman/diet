{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": [
          { "regexp": ".", "file": 1, "location": 2, "message": 3 }
        ],
        "background": { "activeOnStart": true, "beginsPattern": ".", "endsPattern": ".*" }
      }
    },
    {
      "label": "Watch Frontend",
      "type": "shell",
      "command": "npm run watch",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": [
          { "regexp": ".", "file": 1, "location": 2, "message": 3 }
        ],
        "background": { "activeOnStart": true, "beginsPattern": ".", "endsPattern": ".*" }
      }
    }
  ]
}
